import java.util.ArrayList;
import java.util.Scanner; 
public class Action extends Player
{
    
    public String Options(Player pCurrent,ArrayList<Player> players)
    
     
     
    {
        {
            // initialise instance variables

            System.out.println("1.Income");
            System.out.println("2.foreignAid");
            System.out.println("3.coup");
            System.out.println("4.Tax");
            System.out.println("5.Assassinate");
            System.out.println("6.Exchange");
            System.out.println("7.Steal");
            System.out.print("Enter your ACTION");  
            String actionString;
            /*
             * The next switch case method 
             */
            int choice = 0;
            Scanner userInput = new Scanner(System.in);
            System.out.println("Enter an action ");
            choice = userInput.nextInt();
            switch(choice)
            {
                case 1:
                Income();
                return "Income";
                break;
                case 2:
                foreignAid();
                return "foreignAid";
                break;
                case 3:
                coup();
                return "coup";
                break;
                case 4:
                Tax();
                return "Tax";
                break;
                case 5:
                Assassinate(cardDeck);
                return "Assassinate";
                break;
                case 6:
                Exchange();
                return "Exchange";
                break;
                case 7:
                Steal();
                return "Steal";
                break;

            }
        }
    }

    public int Income()
    {
        //takes a coin
        /* case 
         */
        pCurrent.addTokens(2);
    }

    public static void foreignAid()
    {
        //takes 2 coins
        pCurrent.addTokens(2);

    }

    public static void coup()
    {
        //kills a player's card 
        //uses 7 coins

        if (Player.tokenCount >= 7)

            pCurrent.addTokens(CurrentTokens -7);

        else 
            System.out.println("Unavailable action");
    }

    public int Tax()
    {
        //take 3 coins
        currentPlayer.addTokens(7);

        return 0;
    }

    public void Assassinate()
    {
        //killa a card by paying 3 coins
        
        Scanner userInput = new Scanner(System.in);
        if (Player.TokenCount >= 3)
        {
            Player.subtractTokens(3);            
            System.out.println("Which player would you like to affect?");
       
            pCurrent.setHand(ArrayList<Card>);
        }
        else
            System.out.println("Unavailable action");

    }

    public void Exchange(cardDeck deck)
    {
        //exchange cards with court deck or another player

        deck.exchange();

    }

    public void Steal()
    {
        //take 2 coins from another player

        currentPlayer.addTokens(2);

        return;
    } 
}
