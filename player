import java.util.ArrayList;
public class Player
{
    private int tokenCount;
    private int cardCount;
    private String name;
    ArrayList<Card> hand;
    
    public Player()
    {
        tokenCount = 2;
        hand = new ArrayList<Card>();
    }
    
    public Player (String n)
    {
        tokenCount = 2;
        name = n;
        hand = new ArrayList<Card>();
    }
    
    public int getTokens()
    {
        return tokenCount;
    }
    
    public void addTokens(int t)
    {
        tokenCount += t;
    }
    
    public int getCards()
    {
        return cardCount;
    }
    
}
