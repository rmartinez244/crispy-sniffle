        choice = userInput.nextInt();
        switch(choice)
        {
            case 1:
                break;
            case 2:
                break;
            
        }
        
    }
    
    public boolean callBluff(Player liar, String act)
    {
        
    }
    
    public String display()
    {
        for(int k = 0; k < players.length; k++)
        {
            System.out.println(players[k].getName() + ": " + players[k].getToken() + " Token(s)"
            + "       Influences :" + players[k].getCardCount()); 
        }
        
        return "";
    }
    
    public boolean winCondition()
    {
        int losers = 0;
        for(int k = 0; k < players.length; k++)
        {
            if(players[k].getCardCount() == 0)losers++;
        }
        return (losers == players.length);
    }
    
}
